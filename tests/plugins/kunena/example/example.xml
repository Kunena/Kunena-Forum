<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension version="1.7" type="plugin" group="kunena">
	<name>plg_kunena_example</name>
	<version>2.0</version>
	<creationDate>2011-09-26</creationDate>
	<author>Kunena Team</author>
	<authorEmail>kunena@kunena.org</authorEmail>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>(C) 2008 - 2013 Kunena Team. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<description>PLG_KUNENA_EXAMPLE_XML_DESCRIPTION</description>

	<files>
		<filename plugin="example">example.php</filename>
		<filename>index.html</filename>
		<!--
			if you want to install the language files in the plugin folder.
			Create a "language" folder at the root of the pack i.e
			language/en-GB/en-GB.plg_kunena_example.ini
			language/en-GB/en-GB.plg_kunena_example.sys.ini
		-->
		<folder>language</folder>
	</files>
	<languages folder="language">
		<!--
			these files will be installed in the administrator/language folder.
		-->
		<language tag="en-GB">en-GB/en-GB.plg_kunena_example.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_kunena_example.sys.ini</language>
	</languages>

	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="field1" type="text"
					description="Example field 1"
					label="Example field 1"
				/>
			</fieldset>

			<fieldset name="advanced">
				<field name="field2" type="text"
					description="Example field 2"
					label="Example field 2"
				/>
			</fieldset>

			<fieldset name="example">
				<field name="field3" type="text"
					description="Example field 3"
					label="Example field 3"
				/>
			</fieldset>

		</fields>
	</config>
</extension>
