<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install>
<install type="component" version="1.5.0" method="upgrade">
	<name>Kunena</name>
	<version>1.6.0-RC2</version>
	<versionname>Jadili</versionname>
	<creationDate>@kunenaversiondate@</creationDate>
	<build>@kunenaversionbuild@</build>
	<author>www.Kunena.com</author>
	<authorEmail>Kunena@Kunena.com</authorEmail>
	<authorUrl>http://www.Kunena.com</authorUrl>
	<copyright>www.Kunena.com</copyright>
	<license>GNU/GPL</license>
	<description>Kunena Forum</description>
	<installfile>install.kunena.php</installfile>
	<uninstallfile>uninstall.kunena.php</uninstallfile>
	<scriptfile>install.script.php</scriptfile>
	<files>
		<filename>kunena.php</filename>
		<filename>router.php</filename>
		<filename>CHANGELOG.php</filename>
		<filename>COPYRIGHT.php</filename>
	</files>
	<administration>
		<menu task="cpanel" img="components/com_kunena/media/icons/kunena-favicon.png">Kunena Forum</menu>
		<submenu>
			<menu task="showconfig" img="components/com_kunena/media/icons/config-favicon.png">Configuration</menu>
			<menu task="showAdministration" img="components/com_kunena/media/icons/forums-favicon.png">Category Manager</menu>
			<menu task="showprofiles" img="components/com_kunena/media/icons/users-favicon.png">User Manager</menu>
			<menu task="showtrashview" img="components/com_kunena/media/icons/trash-favicon.png">Trash Manager</menu>
			<menu task="templates" img="components/com_kunena/media/icons/templates-favicon.png">Template Manager</menu>			
		</submenu>
		<files>
			<filename>api.php</filename>
			<filename>admin.kunena.php</filename>
			<filename>install.script.php</filename>
			<folder>install</folder>
			<folder>archive</folder>
		</files>
		<languages folder="languages">
			<language tag="ca-ES">ca-ES.com_kunena.install.ini</language>
			<language tag="en-GB">en-GB.com_kunena.install.ini</language>
			<language tag="es-ES">es-ES.com_kunena.install.ini</language>
			<language tag="de-DE">de-DE.com_kunena.install.ini</language>
			<language tag="fi-FI">fi-FI.com_kunena.install.ini</language>
			<language tag="fr-FR">fr-FR.com_kunena.install.ini</language>
			<language tag="nl-NL">nl-NL.com_kunena.install.ini</language>
			<language tag="ru-RU">ru-RU.com_kunena.install.ini</language>
			<language tag="sr-RS">sr-RS.com_kunena.install.ini</language>
			<language tag="sr-YU">sr-YU.com_kunena.install.ini</language>
		</languages>
	</administration>
	<params />
</install>
