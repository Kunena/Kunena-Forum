<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install>
<install type="kunena-template" version="1.6">
	<name>Default Template</name>
	<version>1.6.0</version>
	<creationDate>2010-06-15</creationDate>
	<author>Kunena Team</author>
	<authorEmail>team@kunena.com</authorEmail>
	<authorUrl>http://www.kunena.com</authorUrl>
	<copyright>Kunena Team</copyright>
	<license>GNU/GPL</license>
	<description>
	Default Template is the new Kunena Template by Kunena Team. It is free for public. This template comes with default Kunena installation. For additional information visit the http://www.kunena.com
	</description>
	<thumbnail>template_thumbnail.png</thumbnail>
	<params>
		<param name="avatarPosition" type="list" default="left" label="Avatar Position" description="AVATAR POSITION DESCRIPTION">
			<option value="left">Left</option>
			<option value="top">Top</option>
			<option value="right">Right</option>
			<option value="bottom">Bottom</option>
		</param>
		<!-- Required avatar sizes -->
		<param name="avatarThumbSizeX" type="hidden" default="36" />
		<param name="avatarThumbSizeY" type="hidden" default="36" />
		<param name="avatarWelcomeSizeX" type="hidden" default="72" />
		<param name="avatarWelcomeSizeY" type="hidden" default="72" />
		<param name="avatarIndexSizeX" type="hidden" default="36" />
		<param name="avatarIndexSizeY" type="hidden" default="36" />
		<param name="avatarPostSizeX" type="hidden" default="144" />
		<param name="avatarPostSizeY" type="hidden" default="144" />
		<param name="avatarProfileSizeX" type="hidden" default="200" />
		<param name="avatarProfileSizeY" type="hidden" default="200" />
	</params>
</install>
