<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension type="component" version="2.5" method="upgrade">
	<name>com_kunena</name>
	<version>@kunenaversion@</version>
	<versionname>@kunenaversionname@</versionname>
	<creationDate>@kunenaversiondate@</creationDate>
	<author>Kunena Team</author>
	<authorEmail>kunena@kunena.org</authorEmail>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>(C) 2008 - 2013 Kunena Team. All rights reserved.</copyright>
	<license>GNU/GPLv3 or later</license>
	<description>COM_KUNENA_XML_DESCRIPTION</description>
	<scriptfile>install/install.script.php</scriptfile>
	<files folder="site">
		<filename>index.html</filename>
		<filename>kunena.php</filename>
		<filename>router.php</filename>
		<folder>controllers</folder>
		<folder>language</folder>
		<folder>lib</folder>
		<folder>models</folder>
		<folder>template</folder>
		<folder>views</folder>
	</files>
	<administration>
		<menu view="cpanel" img="components/com_kunena/media/icons/favicons/kunena-logo-white.png">COM_KUNENA</menu>
		<submenu>
            <menu view="cpanel" img="components/com_kunena/media/icons/favicons/kunena-logo-white.png">COM_KUNENA_DASHBOARD</menu>
