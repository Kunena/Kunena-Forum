<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension version="2.5" type="plugin" group="kunena" method="upgrade">
	<name>PLG_KUNENA_EASYPROFILE</name>
	<version>1.0.1</version>
	<creationDate>2015-10-18</creationDate>
	<author>Onlinecommunityhub</author>
	<authorEmail>info@onlinecommunityhub.nl</authorEmail>
	<authorUrl>https://onlinecommunityhub.nl</authorUrl>
	<copyright>.</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
	<description>PLG_KUNENA_EASYPROFILE_DESCRIPTION</description>
	<files>
		<filename plugin="easyprofile">easyprofile.php</filename>
		<filename>avatar.php</filename>
		<filename>profile.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic"  addfieldpath="/administrator/components/com_jsn/models/fields">
				<!-- Decide to use either Kunena or Easyprofile Avatar -->
				<field name="avatar" type="radio" default="1" label="PLG_KUNENA_EASYPROFILE_AVATAR" description="PLG_KUNENA_EASYPROFILE_AVATAR_DESC" class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<!-- Decide which Avatar to use for guests -->
				<field name="guestavatar" type="radio" default="easyprofile" label="PLG_KUNENA_EASYPROFILE_GUESTAVATAR" description="PLG_KUNENA_EASYPROFILE_GUESTAVATAR_DESC" class="btn-group">
					<option value="easyprofile">Easyprofile default</option>
					<option value="avatar">Avatar default</option>
				</field>
				<!-- Decide to use either Kunena or Easyprofile Profile -->
				<field name="profile" type="radio" default="1" label="PLG_KUNENA_EASYPROFILE_PROFILE" description="PLG_KUNENA_EASYPROFILE_PROFILE_DESC" class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<!-- Decide which userlist to use: Kunena or Easyprofile Profile -->
                                <field name="userlist" type="radio" default="1" label="PLG_KUNENA_EASYPROFILE_USERLIST" description="PLG_KUNENA_EASYPROFILE_USERLIST_DESC" class="btn-group">
                                        <option value="0">JNO</option>
                                        <option value="1">JYES</option>
                                </field>
 				<field
					name="menuitem"
					label="PLG_KUNENA_EASYPROFILE_JSN_MENUITEM"
					description="PLG_KUNENA_EASYPROFILE_JSN_MENUITEM_DESC"
					type="parent"
					table="menu"
					where="a.published=1 AND a.link LIKE 'index.php?option=com_jsn&amp;view=list%'"
					field="id"
					multiple="false"
					required="false"
					>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
