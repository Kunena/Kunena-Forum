<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension version="2.5" type="plugin" group="kunena" method="upgrade">
    <name>plg_kunena_altauserpoints</name>
    <version>@kunenaversion@</version>
    <creationDate>@kunenaversiondate@</creationDate>
    <author>Kunena Team</author>
    <authorEmail>Kunena@kunena.org</authorEmail>
    <authorUrl>https://www.kunena.org</authorUrl>
    <copyright>www.kunena.org</copyright>
    <license>GNU/GPLv3 or later</license>
    <description>PLG_KUNENA_ALTAUSERPOINTS_DESCRIPTION</description>
    <namespace>Kunena\Forum\Plugin\Kunena\Altauserpoints</namespace>
    <files>
        <filename plugin="altauserpoints">altauserpoints.php</filename>
        <filename>avatar.php</filename>
        <filename>activity.php</filename>
        <filename>profile.php</filename>
        <folder>language</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="activity" type="list" default="1" label="PLG_KUNENA_ALTAUSERPOINTS_ACTIVITY"
                       description="PLG_KUNENA_ALTAUSERPOINTS_ACTIVITY_DESC" class="inputbox">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="avatar" type="list" default="1" label="PLG_KUNENA_ALTAUSERPOINTS_AVATAR"
                       description="PLG_KUNENA_ALTAUSERPOINTS_AVATAR_DESC" class="inputbox">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="profile" type="list" default="1" label="PLG_KUNENA_ALTAUSERPOINTS_PROFILE"
                       description="PLG_KUNENA_ALTAUSERPOINTS_PROFILE_DESC" class="inputbox">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="activity_points_limit" type="text" default="0"
                       label="PLG_KUNENA_ALTAUSERPOINTS_ACTIVITY_POINTS_LIMIT"
                       description="PLG_KUNENA_ALTAUSERPOINTS_ACTIVITY_POINTS_LIMIT_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>
