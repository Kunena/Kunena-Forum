<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install>
<install type="module" version="1.0.0">
	<name>Kunena Search</name>
	<author>Kunena Project</author>
	<creationDate>September 2010</creationDate>
	<copyright>(C)2010 Kunena Project. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>ron@kunena.com</authorEmail>
	<authorUrl>http://www.kunena.com</authorUrl>
	<version>1.0.0</version>
	<description>This module will display a search box for Kunena. Add it to the kunena_profilebox position.</description>
	<files>
		<filename module="mod_kunena_search">mod_kunena_search.php</filename>
		<filename module="mod_kunena_search">helper.php</filename>
		<filename module="mod_kunena_search">kunena_search.css</filename>
		<filename module="mod_kunena_search">index.html</filename>
		<folder>tmpl</folder>
	</files>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="ksearch_width" type="text" default="20" label="Box Width" description="Size of the search text box in characters" />
		<param name="ksearch_txt" type="text" default="" label="Text" description="PARAMTEXT" />
		<param name="ksearch_button" type="radio" default="" label="Search Button" description="Display a Search Button">
			<option value="">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="ksearch_button_pos" type="list" default="right" label="Button Position" description="Position of the button relative to the search box">
			<option value="right">Right</option>
			<option value="bottom">Bottom</option>
		</param>
		<param name="ksearch_button_txt" type="text" default="Search" label="Button Text" description="PARAMBUTTONTEXT" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>
