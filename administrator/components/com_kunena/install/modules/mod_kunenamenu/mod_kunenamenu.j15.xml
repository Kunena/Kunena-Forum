<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install>
<install type="module" version="1.5" client="site" method="upgrade">
	<name>Kunena Menu</name>
	<version>@kunenaversion@</version>
	<versionname>@kunenaversionname@</versionname>
	<creationDate>@kunenaversiondate@</creationDate>
	<author>Kunena Team</author>
	<authorEmail>kunena@kunena.org</authorEmail>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>(C) 2008 - 2012 Kunena Team. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<description>MOD_KUNENAMENU_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_kunenamenu">mod_kunenamenu.php</filename>
		<folder>tmpl</folder>
		<filename>class.php</filename>
		<filename>index.html</filename>
	</files>
	<params>
		<param name="menutype" type="menu" label="MOD_KUNENAMENU_FIELD_MENUTYPE_LABEL" description="MOD_KUNENAMENU_FIELD_MENUTYPE_DESC" />
		<param name="startLevel" type="list" default="1" label="MOD_KUNENAMENU_FIELD_STARTLEVEL_LABEL" description="MOD_KUNENAMENU_FIELD_STARTLEVEL_DESC">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
			<option value="9">9</option>
			<option value="10">10</option>
		</param>

		<param name="endLevel" type="list" default="0" label="MOD_KUNENAMENU_FIELD_ENDLEVEL_LABEL" description="MOD_KUNENAMENU_FIELD_ENDLEVEL_DESC">
			<option value="0">ALL</option>
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
			<option value="9">9</option>
			<option value="10">10</option>
		</param>

		<param name="showAllChildren" type="radio" default="0" label="MOD_KUNENAMENU_FIELD_ALLCHILDREN_LABEL" description="MOD_KUNENAMENU_FIELD_ALLCHILDREN_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>

		<param name="tag_id" type="text" label="MOD_KUNENAMENU_FIELD_TAG_ID_LABEL" description="MOD_KUNENAMENU_FIELD_TAG_ID_DESC" />

		<param name="class_sfx" type="text" label="MOD_KUNENAMENU_FIELD_CLASS_LABEL" description="MOD_KUNENAMENU_FIELD_CLASS_DESC" />

		<param name="window_open" type="text" label="MOD_KUNENAMENU_FIELD_TARGET_LABEL" description="MOD_KUNENAMENU_FIELD_TARGET_DESC" />
	</params>
</install>
